{% block body %}

    {% include 'header.html.twig' %}

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center">Connexion</h2>
                <div class="card">
                    <div class="card-body">
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger text-center mb-3">
                                {{ message }}
                            </div>
                        {% endfor %}
                        <form method="post" action="{{ path('app_connexion') }}">
                            <div class="form-group mb-3">
                                <label for="adresseMail" class="text-center">Adresse mail</label>
                                <input type="email" class="form-control" id="adresseMail" name="adresseMail" required>
                            </div>
                            <div class="form-group mb-3">
                                <label for="motDePasse" class="text-center">Mot de passe</label>
                                <input type="password" class="form-control" id="motDePasse" name="motDePasse" required>
                            </div>
                            <div class="text-center mb-3">
                                <button type="submit" class="btn btn-primary">Se connecter</button>
                            </div>
                        </form>
                        <div class="text-center">
                            <a href="{{ path('app_inscription') }}">Pas encore inscrit ? S'inscrire</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}